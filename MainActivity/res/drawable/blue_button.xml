<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
      <inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetLeft="5dp"
    android:insetRight="5dp"
    android:insetTop="5dp"
    android:insetBottom="5dp">
      
    <shape>
      <solid
          android:color="#00B4DF" />
      <stroke
          android:width="1dp"
          android:color="#00B4DF" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
    </inset>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#00B4DF"
          android:endColor="#00B4DF"
          android:angle="270" />
      <stroke
          android:width="1dp"
          android:color="#00B4DF" />
      <corners
          android:radius="6dp" />
      <padding
          android:left="5dp"
          android:top="5dp"
          android:right="5dp"
          android:bottom="5dp" />
    </shape>
  </item>
</selector>